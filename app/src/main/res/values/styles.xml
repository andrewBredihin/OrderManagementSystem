<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyActivityStyle">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MyEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="MyTextViewStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="MyBigTextViewStyle" parent="MyTextViewStyle">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="LayoutsMargin" >
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>


    <style name="MyButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="background">@drawable/button_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="minHeight">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyLeftButtonStyle" parent="MyButtonStyle">
        <item name="android:gravity">left|center_vertical</item>
    </style>
</resources>